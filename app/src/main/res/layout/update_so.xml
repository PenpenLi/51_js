<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="horizontal" >
  <FrameLayout
     android:id="@+id/frameGameLayout"  
     android:layout_width="fill_parent"  
     android:layout_height="fill_parent"  
     android:layout_gravity="center"  
    />  
	<ImageView
	    android:id="@+id/loadingBg"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/xiaoloading_bg"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true" 
	     />

 
	<ImageView
	    android:id="@+id/loadingIcon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/xiaoloading"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true" 
	    />
	
	<TextView
	    android:id="@+id/loading_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true" 
	    android:textColor="#ffffff" />


   <FrameLayout
     android:id="@+id/mediaGameView"  
     android:layout_width="fill_parent"  
     android:layout_height="fill_parent"  
     android:layout_gravity="center"  
    />  
    
     
	<ImageView
	    android:id="@+id/loadingView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:src="@drawable/game_default"
	    android:scaleType="centerCrop"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true" 
	    />  

   <td.utils.MediaView  
        android:background="@android:color/black"
        android:id="@+id/videowiew"  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent" 
        android:layout_gravity="center" 
        /> 
            
</RelativeLayout>